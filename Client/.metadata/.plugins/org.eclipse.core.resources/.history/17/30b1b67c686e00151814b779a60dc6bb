package metier;

import java.util.Observer;

public class Engine extends Observer {

	private static Engine instance;
	private Engine()
	{
		
	}
	
	public static Engine getInstance() {
		if(instance==null)
			instance = new Engine();
		return instance;
	}
	
	private ListMessage listMessages;
	
	public void initListMessage(Observer _obs) {
		listMessages = new ListMessage(_obs);
	}
	
	public void writeMessage(String mess) {
		this.listMessages.add(mess);
	}
}
