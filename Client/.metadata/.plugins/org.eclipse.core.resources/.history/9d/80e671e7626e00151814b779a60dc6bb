package network;

import java.io.IOException;
import java.io.ObjectOutputStream;
import java.net.Socket;
import java.util.Observable;
import java.util.Observer;

import network.Message.TypeMessage;

public class ServerThreadListen extends Thread implements Observer {

	private Socket mySocket;
	
	public ServerThreadListen(Socket _s) {
		this.mySocket = _s;
	}
	
	@Override
	public void run() {
		super.run();
		
		Message m = new Message("test", TypeMessage.MESSAGE);
		ObjectOutputStream buffOUT = null;
		try {
			
			buffOUT = new ObjectOutputStream(this.mySocket.getOutputStream());
			buffOUT.writeObject(m);
			buffOUT.flush();
			
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		finally
		{
			try {
				buffOUT.close();
			} catch (IOException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
	}

	@Override
	public void update(Observable arg0, Object arg1) {
		// TODO Auto-generated method stub
		
	}
}
