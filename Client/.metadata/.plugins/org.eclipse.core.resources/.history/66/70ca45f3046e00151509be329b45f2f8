package network;

import java.io.IOException;
import java.io.ObjectInputStream;
import java.net.Socket;

import metier.Engine;
import network.Message.TypeMessage;

public class ServerThreadWrite extends Thread {

	private Socket mySocket;
	
	public ServerThreadWrite(Socket _s) {
		this.mySocket = _s;
	}
	
	@Override
	public void run() {
		super.run();
		
		ObjectInputStream buffIN = null;
		try {
			buffIN = new ObjectInputStream(this.mySocket.getInputStream());
			Message mess = (Message)buffIN.readObject();
			if (mess != null) {
				
				Engine.getInstance().writeMessage(mess.getContent());
				
			}
			else {
				System.out.println("Message not received");
			}
			
		} catch (IOException | ClassNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		finally
		{
			try {
				buffIN.close();
				this.mySocket.close();
				System.out.println("Client déconnecté");
				
			} catch (IOException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
		
	}
}